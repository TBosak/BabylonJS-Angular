{
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom",
      "scripthost"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "@types/node@12",
      "babylonjs/types"
    ],
    "types":[
      "babylonjs"
    ],
        "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
